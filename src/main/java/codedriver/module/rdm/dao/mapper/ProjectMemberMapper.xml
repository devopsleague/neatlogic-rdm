<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="codedriver.module.rdm.dao.mapper.ProjectMemberMapper">
    <resultMap id="memberMap" type="codedriver.module.rdm.dto.ProjectMemberVo">
        <id property="id" column="id"/>
        <result property="projectUuid" column="projectUuid"/>
        <result property="userId" column="userId"/>
        <association property="userVo" javaType="codedriver.framework.dto.UserVo">
            <id property="userId" column="userId"/>
            <result property="userName" column="userName"/>
            <result property="email" column="email"/>
            <result property="phone" column="phone"/>
            <result property="password" column="password"/>
        </association>
    </resultMap>

    <select id="getProjectMemberList" parameterType="java.lang.String" resultMap="memberMap">
        SELECT
        a.`id`,
        a.`project_uuid` as `projectUuid`,
        a.`user_id` as `userId`,
        b.`user_name` as `userName`,
        b.`email`,
        b.`phone`,
        b.`password`
        FROM `rdm_project_member` a LEFT JOIN `user` b ON a.`user_id` = b.`user_id`
        WHERE b.`is_active` = 1 AND a.`project_uuid` = #{projectUuid}
    </select>

    <insert id="insertProjectMember" parameterType="codedriver.module.rdm.dto.ProjectMemberVo">
        <selectKey keyProperty="id" resultType="java.lang.Long" order="AFTER">
            select LAST_INSERT_ID() as id
        </selectKey>
        INSERT INTO `rdm_project_member`
        (
        `project_uuid`,
        `user_id`
        ) VALUES (
        #{projectUuid},
        #{userId}
        )
    </insert>

    <update id="updateProjectMember" parameterType="codedriver.module.rdm.dto.ProjectMemberVo">
        UPDATE `rdm_project_member`
        SET
         `project_uuid` = #{projectUuid},
        `user_id` = #{userId}
        WHERE `id` = #{id}
    </update>
</mapper>
